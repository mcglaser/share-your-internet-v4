<div class="stretch">


  <% if @community.errors.any? %>
    <div class="error-explanation">

      <ul>
      <% @community.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      <br><br></ul>
    </div>
  <% end %>





  <div class="register-community-form-container">
  <h1>Register Your Community</h1>

  <div class="register-a-community">
  <h3 class="instructions">If you live in an apartment complex or gated community
  please enter the community name below. Otherwise please
  enter your street name for community name.</h3>
  </div>


    <div class="">


		<%= form_for(@community) do |f| %>
		<div class="form-row">
		<%= f.label :community_name, 'Community Name:', class: "form-row label"  %>
		<%= f.text_field :community_name, class: "form-row input" %><br><br>
		</div>
		<div class="form-row">
		<%= f.label :community_address, 'Address:', class: "form-row label"  %>
		<%= f.text_field :community_address, class: "form-row input" %><br><br>
		</div>
		<div class="form-row">
		<%= f.label :community_city, 'City:', class: "form-row label"  %>
		<%= f.text_field :community_city, class: "form-row input" %><br><br>
		</div>
		<div class="form-row">
		<%= f.label :community_state, 'State:' %>
		<%= f.select :community_state, options_for_select(us_states) %><br><br>
		</div>
		<div class="form-row">
		<%= f.label :community_zip, 'Zip Code:', class: "form-row label"  %>
		<%= f.text_field :community_zip, class: "form-row input" %><br><br>
		</div>
		<%= f.submit 'Submit', :class => 'altbtn altbtn-lg altbtn-outline' %>
		<% end %>
    
    </div>
    </div>


  

<br><br><br><br><br><br>

</div>

