<div class="stretch">


<br><br><br>
    <div class="form-container">

	  <h1>Sign-Up</h1>

	  <% if @user.errors.any? %>
	    <div id="error_explanation">

	      <ul>
	      <% @user.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      <br><br></ul>
	    </div>
	  <% end %>    

		<%= form_for(@user) do |f| %>

		<div class="form-row">
		<%= f.label :email, class: "form-row label" %>
		<%= f.email_field :email, class: "form-row input" %><br><br>
		</div>

		<div class="form-row">		
		<%= f.label :password, 'Password', class: "form-row label" %>
		<%= f.password_field :password, class: "form-row input" %><br><br>
		</div>

		<div class="form-row">
		<%= f.label :password_confirmation, "Confirm Password", class: "form-row label" %>
		<%= f.password_field :password_confirmation, class: "form-row input" %><br><br>
		</div>

		<div class="form-row">
		<%= f.label :first_name, 'First Name', class: "form-row label" %>
		<%= f.text_field :first_name, class: "form-row input" %><br><br>
		</div>

		<div class="form-row">		
		<%= f.label :last_name, 'Last Name', class: "form-row label" %>
		<%= f.text_field :last_name , class: "form-row input" %><br><br>
		</div>

		<div class="form-row">		
		<%= f.label :address_line_one, 'Address Line 1', class: "form-row label" %>
		<%= f.text_field :address_line_one, class: "form-row input" %><br><br>
		</div>

		<div class="form-row">		
		<%= f.label :address_line_two, 'Address Line 2', class: "form-row label" %>
		<%= f.text_field :address_line_two, class: "form-row input" %><br><br>
		</div>

		<div class="form-row">		
		<%= f.label :city, 'City', class: "form-row label" %>
		<%= f.text_field :city, class: "form-row input" %><br><br>
		</div>

		<div class="form-row">		
		<%= f.label :state, 'State' %>
		<%= f.select :state, options_for_select(us_states) %><br>
		</div>

		<div class="form-row">		
		<%= f.label :zip_code, 'Zip Code', class: "form-row label" %>
		<%= f.text_field :zip_code, class: "form-row input" %><br><br>
		</div>


		<%= f.label :internet_type, 'What Type Of Internet Do You Currently Have?' %>
		<%= f.select :internet_type, ['I do not currently have internet', 'Dial-up', 'DSL', 'Fibre Optic', 'Broadband', 'Mobile Internet', 'Satellite Internet', 'Other', 'Unknown'] %><br><br>
		<%= f.label :internet_speed, 'Which Of The Following Download Speeds Most Closely Matches Your Home Internet?' %>
		<%= f.select :internet_speed, ['I do not currently have internet', '56k', '1 Mbps', '5 Mbps', '10 Mbps', '20Mbps', '30 Mbps', '40 Mbps', '50 Mbps', '75 Mbps', '100 Mbps or more', 'Unknown'] %><br><br>
		<%= f.label :monthly_cost, 'What Is Your Home Internet\'s Monthly Cost? (Leave Blank If You Don\'t Currently Have Internet)' %>
		<%= f.text_field :monthly_cost %><br><br>
		<%= f.submit 'Sign Up', :class => 'altbtn altbtn-lg altbtn-outline' %>
		<% end %>


        <h2>Already Have An Account? <%= link_to "Log In", login_path %></h2>    
    </div>



<br><br><br><br><br><br>
</div>

